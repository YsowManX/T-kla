body {
  margin:0; padding:0; background:black; color:white; font-family:Arial; overflow:hidden;
}
#menu, #game, #bossFight {
  position:absolute; top:0; left:0; width:100%; height:100%;
  display:flex; flex-direction:column; justify-content:center; align-items:center;
}
button {
  padding:20px; margin:10px; font-size:22px; border:none; border-radius:15px; background:linear-gradient(90deg,#ff00ff,#00ffff); color:white; cursor:pointer;
}
#flash {
  position:absolute; top:0; left:0; width:100%; height:100%; background:white; opacity:0; pointer-events:none;
}
.jumpscare {
  position:absolute; width:100%; height:100%; background:url('https://i.imgur.com/3n7z1ZQ.jpeg') no-repeat center center/cover; animation:pop 0.3s;
}
@keyframes pop { from{transform:scale(0);} to{transform:scale(1);} }
.particles {
  position:absolute; width:10px; height:10px; border-radius:50%; background:hsl(var(--h),100%,50%); pointer-events:none; animation:particleMove 1s forwards;
}
@keyframes particleMove {
  to {transform:translate(calc(var(--dx)*20px), calc(var(--dy)*20px)); opacity:0;}
}
